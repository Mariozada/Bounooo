{
  "manifest_version": 3,
  "name": "Bouno",
  "version": "1.0.0",
  "description": "Browser automation extension with external API support",
  "action": {
    "default_title": "Open Bouno"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "unlimitedStorage",
    "activeTab",
    "tabs",
    "tabGroups",
    "alarms",
    "sidePanel",
    "scripting",
    "webRequest",
    "debugger",
    "identity"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}
